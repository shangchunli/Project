                        查找用户：<input type='text' name='username' />
                        <button type='submit' value='submit' >search</button>
                    </form>
                    <tr style="margin-bottom:10px">
                        <td>收藏id</td>
                        <td>用户</td>
                        <td>帖子id</td>
                        <td>操作</td>
                    </tr>
                    <% for(var i = 0; i < usersList.length;i++){%>
                        <tr style="margin-top:10px">
                            <td><%=usersList[i]["id"] %></td>
                            <td> <%= usersList[i]["telphone"] %></td>
                            <td> <%= usersList[i]["chapterid"] %></td>
                            <td><a href="/delcol/?id=<%= usersList[i]['id'] %>">删除</a></td>
                        </tr>
                    <% } %>
                    
                </table>
            </div>
                
        </div>
        
   
  
